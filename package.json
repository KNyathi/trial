{
  "name": "traffic-surveillance",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev": "concurrently -n web,api -c auto 'npm:dev:web' 'npm:dev:api'",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm -w apps/web run build && npm -w apps/api run build",
    "start": "concurrently -n web,api -c auto 'npm:start:web' 'npm:start:api'",
    "start:web": "npm -w apps/web run start",
    "start:api": "npm -w apps/api run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}